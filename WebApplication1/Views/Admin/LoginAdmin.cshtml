@model WebApplication1.Models.AdminModel

@{
    ViewData["Title"] = "LoginAdmin";
    Layout = "~/Pages/_LayoutAdmin.cshtml";
}

<h1>Вхід в аккаунт адміністрантора</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="LoginAdmin" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Ім'я</label>
                <input asp-for="Name" class="form-control" name="Name"/>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Пароль</label>
                <input asp-for="Password" class="form-control" name="Password"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Зайти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

