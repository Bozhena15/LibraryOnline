@model WebApplication1.Models.GenreBookModel

@{
    ViewData["Title"] = "EditGenre";
    Layout = "~/Pages/_LayoutAdmin.cshtml";
}

<h1>EditGenre</h1>

<h4>GenreBookModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditGenre" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Genre" class="control-label">Жанр</label>
                @Html.EditorFor(g => g.Genre)
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


