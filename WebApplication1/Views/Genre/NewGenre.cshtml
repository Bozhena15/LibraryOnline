@model WebApplication1.Models.GenreBookModel

@{
    ViewData["Title"] = "NewGenre";
    Layout = "~/Pages/_LayoutAdmin.cshtml";
}

<h1>Новий жанр</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewGenre" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label">Жанр</label>
                <input asp-for="Genre" class="form-control" name="Genre"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


