@model IEnumerable<WebApplication1.Models.BookModel>

@{
    ViewData["Title"] = "MyBook";
    Layout = "~/Pages/_Layout.cshtml";
}

<h1>MyBook</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenreBook.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearOfPublic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.LastName) @Html.DisplayFor(modelItem => item.Author.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GenreBook.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearOfPublic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
