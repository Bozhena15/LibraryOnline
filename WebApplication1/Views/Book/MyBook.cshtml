@model IEnumerable<WebApplication1.Models.BookModel>

@{
    ViewData["Title"] = "MyBook";
    Layout = "~/Pages/_Layout.cshtml";
}

<h1>MyBook</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Ім'я книги
            </th>
            <th>
                Ім'я автора
            </th>
            <th>
                Жанр книги
            </th>
            <th>
                Рік публікації
            </th>
            <th>
                Опис книги
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.LastName) @Html.DisplayFor(modelItem => item.Author.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GenreBook.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearOfPublic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
            </tr>
        }
    </tbody>
</table>
