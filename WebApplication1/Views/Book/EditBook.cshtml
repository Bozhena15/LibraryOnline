@model WebApplication1.Models.BookModel

@{
    ViewData["Title"] = "EditBook";
    Layout = "~/Pages/_LayoutAdmin.cshtml";
}

<h1>Редагування книги</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBook" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Ім'я</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label">Прізвище автора</label>
                <select asp-for="Author.Id" class="form-control" name="Author" asp-items="ViewBag.AuthorL"></select>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label">Ім'я автора</label>
                <select asp-for="Author.Id" class="form-control" name="Author" asp-items="ViewBag.AuthorF"></select>
            </div>
            <div class="form-group">
                <label asp-for="GenreBook" class="control-label">Жанр</label>
                <select asp-for="GenreBook.Id" class="form-control" name="GenreBook" asp-items="ViewBag.GenreBook"></select>
            </div>
            <div class="form-group">
                <label asp-for="YearOfPublic" class="control-label">Рік видання</label>
                <input asp-for="YearOfPublic" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Link" class="control-label">Силка</label>
                <input asp-for="Link" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Опис книги</label>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Редагування книги" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

