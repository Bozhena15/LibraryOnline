@model IEnumerable<WebApplication1.Models.BookModel>
@{
    ViewData["Title"] = "AllBooks";
    Layout = "~/Pages/_Layout.cshtml";
}

<h1>All Books</h1>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="col">
                Name
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.GenreBook.Genre)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.YearOfPublic)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.LastName) @Html.DisplayFor(modelItem => item.Author.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GenreBook.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfPublic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            @if (User.Identity.IsAuthenticated) { 
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Add</a>
            </td>
            }
        </tr>
}
    </tbody>
</table>
