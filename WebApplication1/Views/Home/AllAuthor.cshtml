@model IEnumerable<WebApplication1.Models.AuthorModel>

@{
    ViewData["Title"] = "AllAuthor";
    Layout = "~/Pages/_LayoutAdmin.cshtml";
}

<h1>Автори</h1>

<p>
    @Html.ActionLink("Новий автор", "NewAuthor", "Author")
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                Прізвище
            </th>
            <th>
                Ім'я
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    <a href="~/Author/EditAuthor/@item.Id">Редагувати</a>
                    <a href="~/Author/DeleteAuthor/@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
