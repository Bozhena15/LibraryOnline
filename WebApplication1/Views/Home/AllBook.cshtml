@model IEnumerable<WebApplication1.Models.BookModel>

@{
    ViewData["Title"] = "AllBook";
    Layout = "~/Pages/_LayoutAdmin.cshtml";
}

<h1>AllBook</h1>

<p>
    <a asp-action="Create">Create New</a>
    @Html.ActionLink("New Book", "NewBook","Book")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenreBook.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearOfPublic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.LastName) @Html.DisplayFor(modelItem => item.Author.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GenreBook.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfPublic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>

            <td>
                <a asp-action="EditBook" asp-controller="Book" asp-route-id="@item.Id">Edit</a> 
                <a asp-action="DeleteBook" asp-controller="Book" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
