@model IEnumerable<WebApplication1.Models.GenreBookModel>

@{
    ViewData["Title"] = "AllGenre";
    Layout = "~/Pages/_LayoutAdmin.cshtml";
}

<h1>Створити жанр</h1>

<p>
    @Html.ActionLink("Новий жанр", "NewGenre", "Genre")
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                Жанр
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                <a href="~/Genre/EditGenre/@item.Id">Редагувати</a>
                <a href="~/Genre/DeleteGenre/@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
